<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE_PATH">${sys:logFilePath:-target/logs/}</Property>
        <Property name="LOG_FILE_NAME">${sys:logFileName:-automation.log}</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="File" fileName="${LOG_FILE_PATH}${LOG_FILE_NAME}"
                     filePattern="${LOG_FILE_PATH}automation-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- HTML File Appender (optional) -->
        <File name="HtmlFile" fileName="${LOG_FILE_PATH}automation.html">
            <HTMLLayout charset="UTF-8" title="Automation Test Logs" 
                       locationInfo="true" contentType="text/html"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="${sys:log.level:-INFO}">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="HtmlFile"/>
        </Root>

        <!-- Specific Loggers -->
        <Logger name="org.main.selenium" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.openqa.selenium" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.testng" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
